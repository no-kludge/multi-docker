{
    "AWSEBDockerrunVersion": 2,
    "containerDefinitions": [
        {
            "name": "client",
            "image": "catchsagar/multi-docker-client",
            "hostname": "client",
            "essential": false,
            "memory": 128
        },
        {
            "name": "server",
            "image": "catchsagar/multi-docker-server",
            "hostname": "api",
            "essential": false,
            "memory": 128
        },
        {
            "name": "worker",
            "image": "catchsagar/multi-docker-worker",
            "hostname": "worker",
            "essential": false,
            "memory": 128
        },
        {
            "name": "nginx",
            "image": "catchsagar/multi-docker-nginxt",
            "hostname": "client",
            "essential": true,
            "memory": 128,
            "portMappings": [
                {
                "hostPort": 80,
                "containerPort": 80
                }
            ],
            "links": ["client", "server"]
        }
    ]
}
